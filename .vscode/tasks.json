{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create ZSH Script",
      "type": "process",
      "command": "./.vscode/create-zsh-script.zsh",
      "args": ["${input:scriptName}"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "scriptName",
      "type": "promptString",
      "description": "Enter the name of the script (no extension)",
      "default": ""
    }
  ]
}
